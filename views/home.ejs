<%- include("public/header.ejs")%> 
<h1>
    Hello! This is homepage.
</h1>


<% Articles.forEach(Article => { %> 
    <div class='col-md-3 col-sm-6'>
        <div class='thumbnail'>
            <img src="<%= Article.img%>">
            <div class='caption'>
                <h4><%= Article.title %></h4>
            </div>
            <p>
                <a href='/article/show?id=<%- Article._id %>' class="btn btn-primary">More info</a>
            </p>
        </div>
    </div>
<% }); %> 

<%- include("public/foot.ejs")%> 