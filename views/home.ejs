<%- include("public/header.ejs")%> 

    <header class="jumbotron">
        <div class="container">
            <h1>Hello! This is homepage.</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/article/add">Add new!</a>
            </p>
        </div>
    </header>



<% Articles.forEach(Article => { %> 
    <div class='col-md-3 col-sm-6'>
        <div class='thumbnail'>
            <img src="<%= Article.img%>">
            <div class='caption'>
                <h4><%= Article.title %></h4>
            </div>
            <p>
                <a href='/article/show?id=<%- Article._id %>' class="btn btn-primary">More info</a>
            </p>
        </div>
    </div>
<% }); %> 

