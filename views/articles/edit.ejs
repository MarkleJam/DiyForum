<%- include("../public/header.ejs") %> 
<div class="container">
    <div class="well">
        <h1>Modify</h1>
        <form action="/article/<%= Article._id %>/doEdit" method="POST">
            <div class="form-group">
                <input class='form-control' name='title' type='text' value='<%=Article.title%>' placeholder="TITLE">
            </div>
            <div class="form-group">
                <input class='form-control' name='img' type='text' value="<%=Article.img%>" placeholder="URL">
            </div>
            <div class="form-group">
                <input class='form-control' name='description' type='text' value="<%= Article.description %>" placeholder="DESCRIPTION">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default">Submit</button>
            </div>
        </form>
    </div>

</div>

